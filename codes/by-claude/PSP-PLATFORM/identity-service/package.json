{
  "name": "psp-platform",
  "version": "1.0.0",
  "description": "Promotion & Sampling Platform - Identity & Authentication Service",
  "private": true,
  "workspaces": [
    "backend",
    "shared/packages/*"
  ],
  "scripts": {
    "dev": "npm run dev:backend",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:shared && npm run build:backend",
    "build:shared": "npm run build --workspaces --if-present",
    "build:backend": "cd backend && npm run build",
    "test": "npm run test:shared && npm run test:backend",
    "test:shared": "npm run test --workspaces --if-present",
    "test:backend": "cd backend && npm run test",
    "test:watch": "npm run test:backend -- --watch",
    "test:coverage": "npm run test:backend -- --coverage",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:migrate": "cd backend && npm run db:migrate",
    "db:seed": "cd backend && npm run db:seed",
    "db:reset": "cd backend && npm run db:reset",
    "docker:build": "docker build -t psp-platform .",
    "docker:dev": "docker-compose -f docker-compose.yml up --build",
    "docker:test": "docker-compose -f docker-compose.test.yml up --build --abort-on-container-exit",
    "k8s:deploy": "kubectl apply -f k8s/",
    "clean": "rm -rf node_modules backend/node_modules backend/dist shared/packages/*/node_modules shared/packages/*/dist",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=20.11.0",
    "npm": ">=10.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.6.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^2.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.0",
    "typescript": "^5.3.3",
    "concurrently": "^8.2.2"
  },
  "lint-staged": {
    "*.{ts,js,json,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/psp-platform/identity-service.git"
  },
  "keywords": [
    "psp",
    "promotion",
    "sampling",
    "identity",
    "authentication",
    "microservices",
    "nodejs",
    "typescript",
    "clean-architecture"
  ],
  "author": "PSP Team",
  "license": "PRIVATE"
}
